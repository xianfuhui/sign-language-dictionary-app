    <!-- CSS for the theme -->
    <style>
        .caro-item {
            width: 100%;
            max-width: 300px;
            /* Set max width for items */
            height: 450px;
            /* Fixed height */
            overflow: hidden;
            /* Ensure content does not overflow */
            margin: 0 auto;
            /* Center items */
        }

        .course-box {
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .image-wrap {
            height: 60%;
            /* Height for the image section */
            overflow: hidden;
        }

        .image-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            /* Ensure image covers the container */
        }

        .course-details {
            padding: 10px;
            height: 30%;
            /* Height for details section */
            overflow: hidden;
            text-overflow: ellipsis;
            /* Ensure text does not overflow */
        }

        .course-footer {
            padding: 10px;
            height: 10%;
            /* Height for footer section */
        }
    </style>

    <!-- CSS for the SEARCH bar -->
    <style>
        .search-container {
            margin-top: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .search-container input[type="text"] {
            width: 60%;
            padding: 20px;
            font-size: 16px;
            border: 2px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-right: 10px;
        }

        .search-container button {
            padding: 20px 40px;
            font-size: 16px;
            cursor: pointer;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            transition: 1s ease;
        }

        .search-container button:hover {
            background-color: #0056b3;
        }
    </style>

</head>

<body>

    <!-- LOADER -->
    <div id="preloader">
        <img class="preloader" src="/frontend/user/images/loader.gif" alt="">
    </div><!-- end loader -->
    <!-- END LOADER -->

    <div id="wrapper">
        <%- include('./components/user_Header') %>

            <section style="height: 500px;" id="home" class="video-section js-height-full">
                <div class="overlay"></div>
                <div class="home-text-wrapper relative container">
                    <div class="home-message">
                        <p>Sign Language Dictionary</p>
                        <h2 style="margin: 0px; color:white ">Locked Status User</h2>
                        <small>Your account has been locked so you cannot access features.</small>
                        <div class="btn-wrapper">
