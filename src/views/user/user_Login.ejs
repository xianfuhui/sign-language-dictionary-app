<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Language Dictionary</title>
    <link rel="stylesheet" href="/css/user/user_Login.css">

    <style>
        .alert {
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
            font-size: 16px;
            line-height: 1.5;
        }

        .alert-danger {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }

        .alert-danger .close {
            color: #721c24;
            opacity: 0.5;
            cursor: pointer;
            font-size: 20px;
            font-weight: bold;
        }

        .alert-danger .close:hover {
            opacity: 0.75;
        }

        .alert .close {
            float: right;
            margin-left: 15px;
        }

        .password-wrapper {
            position: relative;
        }

        .password-wrapper input[type="password"] {
            padding-right: 40px;
            /* Make space for the eye icon */
        }

        .password-wrapper .toggle-password {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
            font-size: 18px;
            color: #007bff;
        }

        .password-wrapper .toggle-password:hover {
            color: #0056b3;
        }
    </style>
</head>

<body>
    <%- include('../other/components/notification') %>
    
    <div class="container">
        <input type="checkbox" id="check">
        <div class="login form">
            <header>Login</header>
            <form action="/user/login" method="POST">
                <input type="text" name="email" placeholder="Enter your email" required>
                <div class="password-wrapper">
                    <input type="password" id="password" name="password" placeholder="Enter your password" required>
                    <span class="toggle-password" onclick="togglePassword()">
                        <i style="color: black;" class="fa fa-eye"></i>
                    </span>
                </div>
                <a href="/user/forgot-password">Forgot password?</a>
                <div>
                    <% if (messages.error) { %>
                        <div class="alert alert-danger">
                            <%= messages.error %>
                        </div>
                        <% } %>
                </div>
                <input type="submit" class="button" value="Login">
            </form>
            <div class="signup">
                <span class="signup">Don't have an account?
                    <a href="/user/register">Signup</a>
                </span>
            </div>
        </div>
    </div>

    <!-- Load Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.querySelector('.toggle-password i');
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }
    </script>
</body>

</html>